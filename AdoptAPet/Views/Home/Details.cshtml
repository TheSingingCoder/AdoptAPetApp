@model AdoptAPet.Models.Animal
<h2>@Model.Name</h2>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-8 column">
                    <img src="@Model.Image" style="width: 400px"/>
                </div>
                <div class="col-md-4 column">
                   <ul>
                       <li>Breed: @Model.Breed</li>
                       <li>Age: @Model.Age</li>
                       <li>Gender: @Model.Gender</li>
                   </ul>
                </div>
            </div>
        </div>
    </div>
</div>
