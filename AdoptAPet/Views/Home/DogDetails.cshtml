@model AdoptAPet.Models.Dog
<h2 class="name-btn">@Model.Name</h2>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-4 column">
                    <img src="@Model.Image" class="details-img" style="width: 100%" /><br/>
                    <div class="btn btn-info edit-btn"><a href="/Home/EditDog/@Model.Id">Edit</a></div>
                </div>
                <div class="col-md-6 column">
                    <ul class="list-group">
                        <li class="list-group-item">Breed: @Model.Breed</li>
                        <li class="list-group-item">Age: @Model.Age</li>
                        <li class="list-group-item">Gender: @Model.Gender</li>
                        <li class="list-group-item">Favortie Toy: @Model.FavoriteToy</li>
                        <li class="list-group-item">Bio: @Model.Bio</li>
                    </ul>
                </div>
                <div class="col-md-2 column">
                </div>
            </div>
        </div>
    </div>
</div>
